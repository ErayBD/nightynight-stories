<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="#E4DCDC">

    <Button
        android:id="@+id/storybookButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="175dp"
        android:backgroundTint="#2E9DE7"
        android:text="Story Book 1\n\n-----\n\nMavi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/storybookButton_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="75dp"
        android:backgroundTint="#5B902525"
        android:text="Story Book 2\n\nxxxxx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/storybookButton_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="175dp"
        android:backgroundTint="#5B902525"
        android:text="Story Book 3\n\nxxxxx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storybookButton" />

    <Button
        android:id="@+id/storybookButton_4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#5B902525"
        android:text="Story Book 4\n\nxxxxx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storybookButton_2" />



    <Button
        android:id="@+id/voskButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Vosk SDK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/googleCloudButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:text="Google Cloud API"
        app:layout_constraintBottom_toTopOf="@+id/voskButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>